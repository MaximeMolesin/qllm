{
  "compilerOptions": {
    "target": "ES6",                          // Specify ECMAScript target version
    "module": "Node16",                       // Specify module code generation
    "outDir": "./dist/cjs",                   // Redirect output structure to the dist folder
    "rootDir": "./src",                       // Specify the root directory of input files
    "strict": true,                           // Enable all strict type-checking options
    "esModuleInterop": true,                  // Enables emit interoperability between CommonJS and ES Modules
    "declaration": true,                       // Generates corresponding '.d.ts' file
    "moduleResolution": "Node16"              // Specify module resolution strategy,

  },
  "include": ["src/**/*"],                     // Include all TypeScript files in the src folder
  "exclude": ["node_modules", "**/*.spec.ts"] // Exclude node_modules and test files
}