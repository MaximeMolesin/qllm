{
  "compilerOptions": {
    "types": ["jest", "node"],
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist/tsc",
    "rootDir": "./src",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*", "__tests__/**/*",
  "src/**/*.ts",
  "src/**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
